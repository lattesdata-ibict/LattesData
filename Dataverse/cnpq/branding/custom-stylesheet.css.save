/*
Estilos da lista de resultado
*/

table[id$='resultsTable'] td > div {
	
	border-radius: 5px;
	
}

[id$='resultsTable'] div[class*='Result'] > div.card-title-icon-block, [id$='resultsTable'] div[class*='Result'] > div.card-preview-icon-block, [id$='resultsTable'] div[class*='Result'] > div.file-tags-block {
    
	font-size: 120%;
	font-weight: bold;
	margin: 1rem;
}
table[id$='resultsTable'] td > div.datasetResult {
    
    background: #f2f8ff;
	border: #bdcfe5 1px solid;
}

.bg-citation {
    background: #FFF;
    border: 0;
    border-radius: 5px !important;
}
